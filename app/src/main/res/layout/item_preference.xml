<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_content"

        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="#1e1e1e"
        android:text="This is a very very long content to test multiple lines display"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
        app:layout_constraintRight_toLeftOf="@id/button_delete"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/text_date"

        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:textSize="14sp"
        android:textColor="#808080"
        android:text="2021-11-28"

        app:layout_constraintTop_toBottomOf="@id/text_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/button_delete"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button_delete"

        android:src="@drawable/ic_close_gray_24dp"
        android:scaleType="centerInside"
        android:background="#00000000"
        android:padding="8dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="Delete This Preference" />

</androidx.constraintlayout.widget.ConstraintLayout>